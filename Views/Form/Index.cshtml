@model IEnumerable<SmartComply.Models.Form>

@{
    ViewData["Title"] = "Form Management";
    var currentStatus = ViewBag.StatusFilter as string;
    var currentSearchTerm = ViewBag.SearchTerm as string;
}

<!-- Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <!-- Breadcrumb Navigation -->
    <div class="card-header p-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")" class="btn btn-link text-primary p-0">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Form Management</li>
            </ol>
        </nav>
    </div>

    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Form Management</h5>
        <a asp-action="Add" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Click to add a new form">+ Add Form</a>
    </div>

    <div class="card-body">
        <!-- Filter and search form -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <form method="get" asp-action="Index" role="search" class="d-flex" style="width: 100%;">
                <div class="d-flex align-items-center rounded-pill border overflow-hidden" style="border-color: #ced4da; width: 100%;">
                    <!-- Dropdown filter for status -->
                    <select name="statusFilter" aria-label="Filter by status" class="form-control border-0 rounded-0" style="max-width: 120px; box-shadow: none; height: 50px; background-color: transparent;">
                        <option value="" selected="@(string.IsNullOrEmpty(currentStatus) ? "selected" : null)">All Statuses</option>
                        <option value="Editing" selected="@(currentStatus == "Editing" ? "selected" : null)">Editing</option>
                        <option value="Revised" selected="@(currentStatus == "Revised" ? "selected" : null)">Revised</option>
                        <option value="Published" selected="@(currentStatus == "Published" ? "selected" : null)">Published</option>
                        <option value="Hidden" selected="@(currentStatus == "Hidden" ? "selected" : null)">Hidden</option>
                    </select>

                    <!-- Separator line -->
                    <div style="width: 1px; background-color: #999; height: 30px; margin: 0 8px;"></div>

                    <!-- Search input -->
                    <input type="search" name="searchTerm" placeholder="What are you looking for...?" value="@(currentSearchTerm ?? "")" aria-label="Search" class="form-control border-0 rounded-0 flex-grow-1" style="box-shadow: none; height: 45px; font-size: 1rem; background-color: transparent;">

                    <!-- Search button -->
                    <button type="submit" class="btn btn-warning rounded-pill ml-2 d-flex align-items-center justify-content-center" aria-label="Search" style="height: 50px; padding: 0 1.25rem;" data-bs-toggle="tooltip" data-bs-placement="top" title="Click to search">
                        <i class="bx bx-search" style="font-size: 1.2rem;"></i>
                    </button>
                </div>
            </form>
        </div>

        <!-- Table of forms -->
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Title</th>
                        <th>Created</th>
                        <th>Elements</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center">No forms found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var form in Model)
                        {
                            <tr>
                                <td>@form.Category?.CategoryName</td>
                                <td>@form.FormName</td>
                                <td>@form.CreatedDate.ToLocalTime().ToString("g")</td>
                                <td>@form.FormElements.Count</td>
                                <td>
                                    @if (form.Status == "Published")
                                    {
                                        <span class="badge bg-label-success">Published</span>
                                    }
                                    else if (form.Status == "Editing")
                                    {
                                        <span class="badge bg-label-warning">Editing</span>
                                    }
                                    else if (form.Status == "Revised")
                                    {
                                        <span class="badge bg-label-secondary">Revised</span>
                                    }
                                    else if (form.Status == "Hidden")
                                    {
                                        <span class="badge bg-label-dark">Hidden</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-label-dark">Unknown</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <!-- Preview Action -->
                                            <li>
                                                <a class="dropdown-item" href="@Url.Action("Preview", new { id = form.FormId })">
                                                    <img src="https://cdn-icons-png.flaticon.com/512/142/142336.png" alt="Preview Icon" style="width: 20px; height: 20px;" /> Preview
                                                </a>
                                            </li>

                                            <!-- Edit Action -->
                                            <li>
                                                <a class="dropdown-item" href="@Url.Action("Edit", new { id = form.FormId })">
                                                    <i class="bx bx-edit"></i> Edit
                                                </a>
                                            </li>

                                            <!-- Toggle Visibility Action (only if Published or Hidden) -->
                                            @if (form.Status == "Published" || form.Status == "Hidden")
                                            {
                                                <li>
                                                    <a href="javascript:void(0);" class="dropdown-item"
                                                       onclick="showConfirmationModal('@(form.Status == "Hidden" ? "unhide" : "hide")', '@form.FormId')">
                                                        <i class="bx bx-hide"></i>
                                                        @(form.Status == "Hidden" ? "Unhide" : "Hide")
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal for Confirmation -->
<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Confirm Action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to <span id="actionType">hide</span> this form?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmActionBtn">Confirm</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showConfirmationModal(action, formId) {
        // Set the action type dynamically in the modal (Hide/Unhide)
        document.getElementById('actionType').textContent = action;

        // Store the formId in a custom data attribute for later use
        var confirmButton = document.getElementById('confirmActionBtn');
        confirmButton.setAttribute('data-form-id', formId); // Set form ID for later

        // Show the modal
        $('#confirmationModal').modal('show');
    }

    // Handle the confirmation button click
    document.getElementById('confirmActionBtn').addEventListener('click', function() {
        // Get the form ID from the button's data attribute
        var formId = this.getAttribute('data-form-id');

        // Get the action (Hide or Unhide) from the modal text
        var actionType = document.getElementById('actionType').textContent.toLowerCase();

        // Create the form element for the POST request
        var form = document.createElement("form");
        form.method = "POST";
        form.action = '@Url.Action("ToggleVisibility", "Form")'; // This will generate the correct URL

        // Add the formId as a hidden input field
        var input = document.createElement("input");
        input.type = "hidden";
        input.name = "id";
        input.value = formId;
        form.appendChild(input);

        // Append the form to the body and submit it
        document.body.appendChild(form);
        form.submit();
    });

    // Auto close success alerts after 5 seconds
    window.setTimeout(function() {
        var alert = document.querySelector('.alert-success');
        if (alert) {
            var bsAlert = bootstrap.Alert.getInstance(alert) || new bootstrap.Alert(alert);
            bsAlert.close();
        }
    }, 5000);
</script>

