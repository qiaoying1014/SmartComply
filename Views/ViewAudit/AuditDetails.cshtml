@model SmartComply.Models.Audit
@{
    ViewData["Title"] = "Audit Details";
}

<!-- Card Structure -->
<div class="card">
    <!-- Breadcrumb Navigation -->
    <div class="card-header p-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Manager")" class="btn btn-link text-primary p-0">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "ViewAudit")" class="btn btn-link text-primary p-0">Audit List</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Audit Details</li>
            </ol>
        </nav>
    </div>

    <div class="card-header p-4">
        <h5 class="mb-0">@Model.AuditName</h5>
    </div>

    <div class="card-body p-4">
        <div class="mb-4">
            <p><strong>Category:</strong> @Model.Category?.CategoryName</p>
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>Due Date:</strong> @Model.DueDate.ToShortDateString()</p>
            <p><strong>Created By:</strong> @Model.Staff?.StaffName (@Model.Staff?.StaffEmail)</p>
        </div>

        <hr />

        <h4 class="mt-4">Submitted Forms</h4>
        @if (Model.FormResponders.Any())
        {
            <table class="table table-bordered table-hover mb-0">
                <thead>
                    <tr>
                        <th>Form Name</th>
                        <th>Submitted By</th>
                        <th>Submitted At</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var responder in Model.FormResponders)
                    {
                        <tr>
                            <td>@responder.Form?.FormName</td>
                            <td>@responder.Staff?.StaffName</td>
                            <td>@responder.SubmittedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
                            <td>
                                <a href="@Url.Action("ViewForm", "ViewAudit", new { id = responder.FormResponderId })" class="btn btn-info btn-sm">
                                    View Form
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No forms submitted for this audit.</p>
        }

        <hr />

        <h5 class="mt-4">Corrective Actions</h5>
        @{
            var correctiveActions = ViewBag.CorrectiveActions as List<SmartComply.Models.CorrectiveAction>;
        }

        @if (correctiveActions != null && correctiveActions.Any())
        {
            <table class="table table-bordered table-hover mb-0">
                <tbody>
                    @foreach (var ca in correctiveActions)
                    {
                        <tr>
                            <td class="d-flex justify-content-between align-items-center">
                                <span>@ca.Description</span>
                                <a href="@Url.Action("ViewCorrectiveAction", "ViewAudit", new { id = ca.CorrectiveActionId })" class="btn btn-info btn-sm">
                                    View Corrective Action
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No corrective actions found for this audit.</p>
        }
    </div>
</div>
