@model SmartComply.ViewModels.ComplianceCategoryViewModel
@{
    ViewData["Title"] = "Edit Compliance Category";
}
<div class="card">
    <div class="card-header p-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")" class="btn btn-link text-primary p-0">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "ComplianceCategory")" class="btn btn-link text-primary p-0">Compliance Category Management</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit Compliance Category</li>
            </ol>
        </nav>
    </div>

    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Edit Compliance Category</h5>
        <div>
            <!-- Reset Button with Tooltip -->
            <button type="button" class="btn btn-outline-secondary me-2" onclick="showResetConfirmationModal()" data-bs-toggle="tooltip" data-bs-placement="top" title="Reset the form and clear any changes made">Reset</button>

            <!-- Save Button with Tooltip -->
            <button type="button" class="btn btn-primary" onclick="showSaveConfirmationModal()" data-bs-toggle="tooltip" data-bs-placement="top" title="Save the new changes">Save</button>
        </div>
    </div>

    <div class="card-body">
        <form id="form-builder" asp-action="Edit" method="post" asp-route-id="@Model.CategoryId">
            <input type="hidden" asp-for="CategoryId" />
            <div class="mb-4">
                <label asp-for="CategoryName" class="form-label">Category Name</label>
                <input asp-for="CategoryName" class="form-control" placeholder="e.g. Halal Certification" />
                <span asp-validation-for="CategoryName" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="CategoryDescription" class="form-label">Category Description</label>
                <textarea asp-for="CategoryDescription" class="form-control" rows="4" placeholder="e.g. A detailed description of the category's purpose"></textarea>
                <span asp-validation-for="CategoryDescription" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryIsEnabled" class="form-label">Status</label>
                <select asp-for="CategoryIsEnabled" class="form-select">
                    <option value="true" selected>Enabled</option>
                    <option value="false">Disabled</option>
                </select>
                <span asp-validation-for="CategoryIsEnabled" class="text-danger small"></span>
            </div>
        </form>
    </div>
</div>

<!-- Modal for Reset Confirmation -->
<div class="modal fade" id="resetConfirmationModal" tabindex="-1" aria-labelledby="resetConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resetConfirmationModalLabel">Confirm Reset</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to reset this form? All changes will be lost.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="resetForm()">Confirm</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Save Confirmation -->
<div class="modal fade" id="saveConfirmationModal" tabindex="-1" aria-labelledby="saveConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="saveConfirmationModalLabel">Confirm Save</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to save these changes?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitForm()">Confirm</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Show Reset Confirmation Modal
        function showResetConfirmationModal() {
            $('#resetConfirmationModal').modal('show');
        }

        // Show Save Confirmation Modal
        function showSaveConfirmationModal() {
            $('#saveConfirmationModal').modal('show');
        }

        // Reset the form fields to the latest saved data
        function resetForm() {
            // Reload the page to fetch the latest saved data from the server
            window.location.href = '@Url.Action("Edit", new { id = Model.CategoryId })'; // This reloads the form to its last saved state
            $('#resetConfirmationModal').modal('hide'); // Hide the reset confirmation modal
        }

        // Submit the form after confirmation
        function submitForm() {
            $('#form-builder').submit();  // Trigger the form submission
            $('#saveConfirmationModal').modal('hide'); // Hide the save confirmation modal
        }
    </script>
}
