@model List<SmartComply.ViewModels.ViewComplianceViewModel>

@{
    ViewData["Title"] = "Compliance Selection";
    var searchTerm = ViewBag.SearchTerm as string;
}

<div class="card">
    <!-- Breadcrumb Navigation -->
    <div class="card-header p-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")" class="btn btn-link text-primary p-0">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("MyAuditSummary", "Audit")" class="btn btn-link text-primary p-0">My Audit Summary</a></li>
                <li class="breadcrumb-item active" aria-current="page">Compliance Selection</li>
            </ol>
        </nav>
    </div>

    <div class="card-header">
        <h5 class="mb-0">Compliance Selection</h5>
        <small class="text-muted d-block">Click on a compliance name to view the available forms.</small>
        <small class="text-muted d-block">Click the "Add Audit" button to start a new audit for that compliance.</small>
    </div>

    <div class="card-body">
        <!-- Filter and Search Form -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <form method="get" asp-action="ViewCompliance" role="search" class="d-flex" style="width: 100%;">
                <div class="d-flex align-items-center rounded-pill border overflow-hidden" style="border-color: #ced4da; width: 100%;">
                    <!-- Search input -->
                    <input type="search" name="searchTerm" placeholder="What are you looking for...?" value="@(searchTerm ?? "")" aria-label="Search" class="form-control border-0 rounded-0 flex-grow-1" style="box-shadow: none; height: 45px; font-size: 1rem; background-color: transparent;">

                    <!-- Search button -->
                    <button type="submit" class="btn btn-warning rounded-pill ml-2 d-flex align-items-center justify-content-center" aria-label="Search" style="height: 50px; padding: 0 1.25rem;" data-bs-toggle="tooltip" data-bs-placement="top" title="Click to search">
                        <i class="bx bx-search" style="font-size: 1.2rem;"></i>
                    </button>
                </div>
            </form>
        </div>

        <!-- Table of Compliance Categories -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Compliance Name</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var category = item.Category;  // ComplianceCategory
                        var formsCount = item.FormsCount; // The number of published forms

                        // Condition to disable the button if no forms
                        var disabledAttribute = formsCount == 0 ? "disabled" : "";

                        if (string.IsNullOrEmpty(searchTerm) || category.CategoryName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
                        {
                            <tr>
                                <td>
                                    <a asp-controller="Audit" asp-action="ViewComplianceForms" asp-route-categoryId="@category.CategoryId">
                                        @category.CategoryName
                                    </a>
                                </td>
                                <td>@category.CategoryDescription</td>
                                <td>
                                    <button class="btn btn-primary @(formsCount == 0 ? "disabled" : "")"
                                            onclick="showConfirmationModal(@category.CategoryId, '@category.CategoryName')"
                                    @(formsCount == 0 ? "disabled" : "")>
                                        Add Audit
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Confirm Action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Do you wish to add an audit for <strong><span id="categoryName"></span></strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmActionBtn">Confirm</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showConfirmationModal(categoryId, categoryName) {
        // Set the category name dynamically in the modal
        document.getElementById('categoryName').textContent = categoryName;

        // Store the categoryId in a custom data attribute for later use
        var confirmButton = document.getElementById('confirmActionBtn');
        confirmButton.setAttribute('data-category-id', categoryId); // Set category ID for later

        // Show the modal
        $('#confirmationModal').modal('show');
    }

    // Handle the confirmation button click
    document.getElementById('confirmActionBtn').addEventListener('click', function() {
        // Get the categoryId from the button's data attribute
        var categoryId = this.getAttribute('data-category-id');

        // Redirect to the AddAudit action with the categoryId
        window.location.href = '/Audit/AddAudit?categoryId=' + categoryId;
    });
</script>
