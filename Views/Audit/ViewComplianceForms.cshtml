@model List<SmartComply.Models.Form>

@{
    ViewData["Title"] = "View Forms";
    var categoryId = ViewBag.CategoryId;
    var categoryName = ViewBag.CategoryName; // Get the category name from ViewBag
}

<div class="card">
    <!-- Breadcrumb Navigation -->
    <div class="card-header p-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")" class="btn btn-link text-primary p-0">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("MyAuditSummary", "Audit")" class="btn btn-link text-primary p-0">My Audit Summary</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("ViewCompliance", "Audit")" class="btn btn-link text-primary p-0">Compliance Selection</a></li>
                <li class="breadcrumb-item active" aria-current="page">View Forms</li>
            </ol>
        </nav>
    </div>

    <div class="card-header">
        <h5 class="mb-0">View Forms</h5>
        <!-- Display category name -->
        <p class="text-muted">Category: @categoryName</p>
    </div>

    <div class="card-body">
        @if (!Model.Any())
        {
            <p class="text-muted">No published forms available for this audit yet.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Form ID</th>
                        <th>Created Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var form in Model)
                    {
                        <tr>
                            <td>@form.FormName</td>
                            <td>@form.CreatedDate.ToShortDateString()</td>
                            <td>@form.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        }
    </div>
</div>
