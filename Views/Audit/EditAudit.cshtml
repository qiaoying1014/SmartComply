@model List<SmartComply.Models.Form>

@{
    ViewData["Title"] = "Edit Audit";

    var auditId = ViewBag.AuditId;
    var auditName = ViewBag.AuditName ?? "Audit";
    var staffId = Context.Session.GetString("StaffId");
    var isEdit = ViewContext.RouteData.Values["action"].ToString() == "ViewEditAudit"
                 || ViewContext.RouteData.Values["action"].ToString() == "CreateAuditDetails";
    string formAction = "EditAudit";
    var dueDate = ViewBag.DueDate != null ? ((DateTime)ViewBag.DueDate).ToString("yyyy-MM-dd") : "";
}

<!-- Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    TempData.Remove("SuccessMessage");
}

<div class="card">
    <!-- Breadcrumb Navigation -->
    <div class="card-header p-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")" class="btn btn-link text-primary p-0">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("MyAuditSummary", "Audit")" class="btn btn-link text-primary p-0">My Audit Summary</a></li>
                <li class="breadcrumb-item active" aria-current="page">Select Form</li>
            </ol>
        </nav>
    </div>



<!-- Edit Audit Details -->
    <div class="card-header">
        <h5 class="mb-0">Edit Audit Details</h5>
        <small class="text-muted">Update the audit name and due date.</small>
    </div>
    <div class="card-body">
        <form asp-action="@formAction" asp-controller="Audit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="AuditId" value="@auditId" />

            <div class="mb-3">
                <label class="form-label">Audit Name</label>
                <input type="text" name="AuditName" value="@auditName" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Due Date</label>
                <input type="date" name="DueDate" value="@dueDate" class="form-control" required />
            </div>

            <button type="button" class="btn btn-primary mt-2" onclick="showSaveConfirmationModal()">Save</button>
        </form>
    </div>
</div>

<!-- Available Forms Table -->
@if (!string.IsNullOrEmpty(auditName) && !string.IsNullOrEmpty(dueDate))
{
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">Available Forms</h5>
            <small class="text-muted">Forms under the selected compliance audit.</small>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-muted">No forms available under this compliance.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Form Name</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var form = Model[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@form.FormName</td>
                                    <td>@form.CreatedDate.ToShortDateString()</td>
                                    <td>
                                        <a href="javascript:void(0)" class="btn btn-sm btn-outline-primary"
                                           onclick="showSelectFormConfirmationModal('@form.FormId', '@auditId')">
                                            Select
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
}

<!-- Save Confirmation Modal -->
<div class="modal fade" id="saveConfirmationModal" tabindex="-1" aria-labelledby="saveConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="saveConfirmationModalLabel">Confirm Save</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to save these changes?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitSaveForm()">Confirm</button>
            </div>
        </div>
    </div>
</div>

<!-- Form Selection Confirmation Modal -->
<div class="modal fade" id="selectFormConfirmationModal" tabindex="-1" aria-labelledby="selectFormConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="selectFormConfirmationModalLabel">Confirm Form Selection</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to select this form for the audit?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="selectForm()">Confirm</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function showSaveConfirmationModal() {
            $('#saveConfirmationModal').modal('show');
        }

        function submitSaveForm() {
            $('form').submit();
            $('#saveConfirmationModal').modal('hide');
        }

        function showSelectFormConfirmationModal(formId, auditId) {
            $('#selectFormConfirmationModal').modal('show');
            $('#selectFormConfirmationModal').data('formId', formId);
            $('#selectFormConfirmationModal').data('auditId', auditId);
        }

        function selectForm() {
            var formId = $('#selectFormConfirmationModal').data('formId');
            var auditId = $('#selectFormConfirmationModal').data('auditId');
            window.location.href = '@Url.Action("Edit", "Response", new { id = "__formId__", auditId = "__auditId__" })'
                .replace('__formId__', formId)
                .replace('__auditId__', auditId);
            $('#selectFormConfirmationModal').modal('hide');
        }

        // Auto close success alerts after 5 seconds
        window.setTimeout(function() {
           var alert = document.querySelector('.alert-success');
              if (alert) {
              var bsAlert = bootstrap.Alert.getInstance(alert) || new bootstrap.Alert(alert);
              bsAlert.close();
           }
        }, 5000);
    </script>
}
