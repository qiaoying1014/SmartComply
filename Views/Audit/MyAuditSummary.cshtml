@model IEnumerable<SmartComply.Models.Audit>

@{
	ViewData["Title"] = "My Audit Summary";
	var statusOptions = new[] { "Draft", "Done", "Rejected", "Overdue", "Pending Corrective Actions", "Pending Review" };
}

<!-- Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    TempData.Remove("SuccessMessage");
}

<div class="card">
	<!-- Breadcrumb Navigation -->
	<div class="card-header p-5">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb mb-0">
				<li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")" class="btn btn-link text-primary p-0">Home</a></li>
				<li class="breadcrumb-item active" aria-current="page">My Audit Summary</li>
			</ol>
		</nav>
	</div>

	<div class="card-header d-flex justify-content-between align-items-center">
		<h5 class="mb-0">My Audit Summary</h5>
		<a asp-action="ViewCompliance" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Click to add a new audit">+ Add Audit</a>
	</div>

    <!-- Card Body with Table -->
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <!-- Filter and Search Form -->
            <form method="get" asp-action="MyAuditSummary" role="search" class="d-flex" style="width: 100%;">
                <div class="d-flex align-items-center rounded-pill border overflow-hidden" style="border-color: #ced4da; width: 100%;">
                    <!-- Dropdown filter for status -->
                    <select name="statusFilter" aria-label="Filter by status" class="form-control border-0 rounded-0" style="max-width: 120px; box-shadow: none; height: 50px; background-color: transparent;">
                        <option value="" selected="@(string.IsNullOrEmpty(ViewBag.StatusFilter?.ToString()) ? "selected" : null)">All Statuses</option>
                        @foreach (var status in statusOptions)
                        {
                            <option value="@status" selected="@(ViewBag.StatusFilter?.ToString().ToLower() == status.ToLower() ? "selected" : null)">@status</option>
                        }
                    </select>

                    <!-- Separator line -->
                    <div style="width: 1px; background-color: #999; height: 30px; margin: 0 8px;"></div>

                    <!-- Search input -->
                    <input type="search" name="searchTerm" placeholder="What are you looking for ...?" value="@(ViewBag.SearchTerm ?? "")" aria-label="Search" class="form-control border-0 rounded-0 flex-grow-1" style="box-shadow: none; height: 45px; font-size: 1rem; background-color: transparent;">

                    <!-- Search button -->
                    <button type="submit" class="btn btn-warning rounded-pill ml-2 d-flex align-items-center justify-content-center" aria-label="Search" style="height: 50px; padding: 0 1.25rem;" data-bs-toggle="tooltip" data-bs-placement="top" title="Click to search">
                        <i class="bx bx-search" style="font-size: 1.2rem;"></i>
                    </button>
                </div>
            </form>
        </div>

		<div class="table-responsive">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Audit Name</th>
						<th>Created Date</th>
						<th>Due Date</th>
						<th>Status</th>
						<th class="text-center">Actions</th>
					</tr>
				</thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center">No audits found based on your search or filter criteria.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var audit in Model)
                        {
                            <tr>
                                <td>@audit.AuditName</td>
                                <td>@audit.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
                                <td>@audit.DueDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <form asp-action="UpdateAuditStatus" asp-controller="Audit" method="post">
                                        <input type="hidden" name="AuditId" value="@audit.AuditId" />
                                        <select name="Status" class="form-select" onchange="this.form.submit()">
                                            @foreach (var status in statusOptions)
                                            {
                                                <option value="@status" selected="@(audit.Status == status)">
                                                    @status
                                                </option>
                                            }
                                        </select>
                                    </form>
                                </td>
                                <td class="text-center">
                                    <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            Actions
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a asp-controller="Audit" asp-action="EditAudit" asp-route-auditId="@audit.AuditId" class="dropdown-item">
                                                    <i class="bx bx-edit"></i> View/Edit Audit
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-action="Index" asp-controller="CorrectiveAction" asp-route-auditId="@audit.AuditId">
                                                    <i class="bx bx-check"></i> Corrective Actions
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item generate-qr" href="#"
                                                   data-auditid="@audit.AuditId"
                                                   title="Generate a QR for external viewing">
                                                    <img src="/img/qr-code.png" alt="QR Icon" style="width: 20px; height: 20px;" /> Generate QR
                                                </a>
                                            </li>

                                            <li>
                                                <form asp-action="DeleteAudit" asp-controller="Audit" method="post" onsubmit="return confirm('Are you sure you want to delete this audit?');">
                                                    <input type="hidden" name="AuditId" value="@audit.AuditId" />
                                                    <button type="submit" class="dropdown-item text-danger">
                                                        Delete
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
			</table>
		</div>
	</div>
</div>

<!-- QR Modal -->
<div class="modal fade" id="qrModal" tabindex="-1" aria-labelledby="qrModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="qrModalLabel">Scan to View Audit</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>
			<div class="modal-body text-center">
				<div id="qrContainer"
					 style="width:200px; height:200px; margin:0 auto; position:relative;">
					<!-- loader -->
					<div id="qrSpinner" class="spinner-border text-primary"
						 role="status"
						 style="position:absolute; top:40%; left:40%;">
						<span class="visually-hidden">Loading...</span>
					</div>
					<!-- QR image, hidden until loaded -->
					<img id="qrModalImg"
						 alt="Audit QR Code"
						 style="width:100%;height:100%;display:none;" />
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	<script>
		// point to your ManagerController.Qr
		const qrBase    = '@Url.Action("Qr", "ViewAudit")';
		const qrImg     = document.getElementById('qrModalImg');
		const qrSpinner = document.getElementById('qrSpinner');

		document.querySelectorAll('.generate-qr').forEach(btn => {
		  btn.addEventListener('click', e => {
			e.preventDefault();
			const auditId = btn.getAttribute('data-auditid');
			const url     = `${qrBase}?auditId=${auditId}&_=${Date.now()}`;

			// show modal first
			const modal = new bootstrap.Modal(document.getElementById('qrModal'));
			modal.show();

			// reset UI
			qrSpinner.style.display = 'block';
			qrImg.style.display     = 'none';
			qrImg.removeAttribute('src');

			// when image arrives, hide spinner/show image
			qrImg.onload = () => {
			  qrSpinner.style.display = 'none';
			  qrImg.style.display     = 'block';
			};
			qrImg.onerror = () => {
			  qrSpinner.style.display = 'none';
			  // optionally show an error message here
			};

			// kick off loading
			qrImg.src = url;
		  });
		});

        // Auto close success alerts after 5 seconds
        window.setTimeout(function() {
           var alert = document.querySelector('.alert-success');
              if (alert) {
              var bsAlert = bootstrap.Alert.getInstance(alert) || new bootstrap.Alert(alert);
              bsAlert.close();
           }
        }, 5000);
	</script>
}

