@model List<SmartComply.Models.Form>

@{
    ViewData["Title"] = "Add Audit";
}

@{
    var auditId = ViewBag.AuditId; // This is passed from the controller
    var auditName = ViewBag.AuditName ?? "Audit";
    var staffId = Context.Session.GetString("StaffId");

    var isEdit = ViewContext.RouteData.Values["action"].ToString() == "ViewEditAudit"
                 || ViewContext.RouteData.Values["action"].ToString() == "AddAuditDetails";

    string formAction = isEdit ? "AddAuditDetails" : "AddAudit"; // POST action
}

<div class="card">
    <!-- Breadcrumb Navigation -->
    <div class="card-header p-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")" class="btn btn-link text-primary p-0">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("MyAuditSummary", "Audit")" class="btn btn-link text-primary p-0">My Audit Summary</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("ViewCompliance", "Audit")" class="btn btn-link text-primary p-0">Compliance Selection</a></li>
                <li class="breadcrumb-item active" aria-current="page">Select Form</li>
            </ol>
        </nav>
    </div>

    <div class="card-header">
        <h5 class="mb-0">Edit Audit Details</h5>
        <small class="text-muted d-block">Modify the audit name and due date.</small>
    </div>

    <div class="card-body">
        <!-- Only show audit form details if there are forms available -->
        @if (Model.Any())
        {
            <!-- Audit Form Details -->
            <form asp-action="@formAction" asp-controller="Audit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="AuditId" value="@ViewBag.AuditId" />

                <!-- Audit Name input -->
                <div class="mb-3">
                    <label for="AuditName">Audit Name</label>
                    <input type="text" name="AuditName" value="@ViewBag.AuditName" class="form-control" required />
                </div>

                <!-- Due Date input -->
                <div class="mb-3">
                    <label for="DueDate">Due Date</label>
                    <input type="date" name="DueDate" class="form-control" value="@(((DateTime)ViewBag.DueDate).ToString("yyyy-MM-dd"))" required />
                </div>

                <button type="button" class="btn btn-primary mt-2" onclick="showSaveConfirmationModal()">Save</button>
            </form>
        }
        else
        {
            <p class="text-muted">No forms available under this compliance. You cannot create an audit until forms are available.</p>
        }
    </div>
</div>

<!-- Card for Form Selection -->
@if (!string.IsNullOrEmpty(auditName) && @ViewBag.DueDate != default(DateTime))
{
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">Select a Form for Audit</h5>
            <small class="text-muted d-block">Choose a form to continue with the audit process.</small>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-muted">No forms available under this compliance.</p>
            }
            else
            {
                <ul class="list-group">
                    @{
                        int count = 1;
                    }

                    @foreach (var form in Model)
                    {
                        <li class="list-group-item">
                            <span class="me-2 fw-bold">@count.</span>
                            <a href="javascript:void(0)" onclick="showSelectFormConfirmationModal('@form.FormId', '@auditId')">
                                @form.FormName - Created @form.CreatedDate.ToShortDateString()
                            </a>
                        </li>
                        count++;
                    }
                </ul>
            }
        </div>
    </div>
}

<!-- Modal for Save Confirmation -->
<div class="modal fade" id="saveConfirmationModal" tabindex="-1" aria-labelledby="saveConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="saveConfirmationModalLabel">Confirm Save</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to save these changes?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitSaveForm()">Confirm</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Select Form Confirmation -->
<div class="modal fade" id="selectFormConfirmationModal" tabindex="-1" aria-labelledby="selectFormConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="selectFormConfirmationModalLabel">Confirm Form Selection</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to select this form for the audit?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="selectForm()">Confirm</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Show Save Confirmation Modal
        function showSaveConfirmationModal() {
            $('#saveConfirmationModal').modal('show');
        }

        // Submit Save Form
        function submitSaveForm() {
            $('form').submit();  // Trigger form submission
            $('#saveConfirmationModal').modal('hide');  // Hide modal after submission
        }

        // Show Select Form Confirmation Modal
        function showSelectFormConfirmationModal(formId, auditId) {
            $('#selectFormConfirmationModal').modal('show');
            $('#selectFormConfirmationModal').data('formId', formId);
            $('#selectFormConfirmationModal').data('auditId', auditId);
        }

        // Confirm selecting the form
        function selectForm() {
            var formId = $('#selectFormConfirmationModal').data('formId');
            var auditId = $('#selectFormConfirmationModal').data('auditId');
            window.location.href = '@Url.Action("Fill", "Response", new { id = "__formId__", auditId = "__auditId__" })'.replace('__formId__', formId).replace('__auditId__', auditId);
            $('#selectFormConfirmationModal').modal('hide');
        }
    </script>
}
